{
  "projects": {
    "spell-service": {
      "root": "apps/spell-service",
      "targets": {
        "build": {
          "executor": "@nx/workspace:run-commands",
          "options": {
            "command": "go build -o dist/spell-service ./apps/spell-service"
          }
        },
        "serve": {
          "executor": "@nx/workspace:run-commands",
          "options": {
            "command": "go run ./apps/spell-service"
          }
        }
      }
    },
    "rust-service": {
      "root": "apps/rust-service",
      "targets": {
        "build": {
          "executor": "@nx/workspace:run-commands",
          "options": {
            "command": "cargo build --release"
          }
        },
        "serve": {
          "executor": "@nx/workspace:run-commands",
          "options": {
            "command": "cargo run"
          }
        }
      }
    }
  }
}
